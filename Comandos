2.
CREATE TABLESPACE gofar_travel DATAFILE 
'C:/ORACLEXE/app/oracle/oradata/XE/gofar_travel01.dbf' SIZE 500M, 
'C:/ORACLEXE/app/oracle/oradata/XE/gofar_travel02.dbf' SIZE 250M,
'C:/ORACLEXE/app/oracle/oradata/XE/gofar_travel03.dbf' SIZE 250M;

CREATE TABLESPACE test_purposes DATAFILE 
'C:/ORACLEXE/app/oracle/oradata/XE/test_purposes01.dbf' SIZE 500M
 EXTENT MANAGEMENT LOCAL AUTOALLOCATE;

CREATE UNDO TABLESPACE UNDOTBS2 DATAFILE 
'C:/ORACLEXE/app/oracle/oradata/XE/UNDOTBS2_01.dbf' SIZE 5M;

3.
ALTER SYSTEM SET UNDO_TABLESPACE=UNDOTBS2 SCOPE=BOTH;

4.
CREATE USER ADMINISTRADOR
IDENTIFIED BY adm
DEFAULT TABLESPACE gofar_travel
QUOTA UNLIMITED ON gofar_travel
ACCOUNT UNLOCK;
